<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black"
    android:layout_gravity="fill"
    android:layout_margin="0pt"
    android:layout_weight="1"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvShowNumber"
        android:layout_width="match_parent"
        android:inputType="textMultiLine"
        android:ems="10"
        android:background="@color/black"
        android:fontFamily="@font/gilroy"
        android:text="0"
        android:gravity="right|bottom"
        android:textColor="@color/white"
        android:textSize="70sp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="5"
        android:columnCount="4">

        <Button
            android:id="@+id/btnClearEntry"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="CE"
            android:fontFamily="@font/gilroy_med"
            android:textSize="33sp"
            android:layout_columnWeight="1"
            android:textColor="@color/purple_500"
            android:backgroundTint="@color/black"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="clickClearEntry"/>
        <Button
            android:id="@+id/btnClear"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="C"
            android:textSize="33sp"
            android:fontFamily="@font/gilroy_med"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/black"
            android:textColor="@color/purple_500"
            android:onClick="clickClear"/>
        <Button
            android:id="@+id/btnPlusMinus"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="+/-"
            android:fontFamily="@font/gilroy_med"
            android:textSize="40sp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/black"
            android:textColor="@color/purple_500"
            android:onClick="clickNumber"/>
        <Button
            android:id="@+id/btnDiv"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="รท"
            android:textSize="40sp"
            android:fontFamily="@font/gilroy_med"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/black"
            android:textColor="@color/purple_500"
            android:onClick="clickOperation"/>


        <Button
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="7"
            android:fontFamily="@font/gilroy_med"
            android:textSize="30sp"
            android:layout_columnWeight="1"
            android:textColor="@color/white"
            android:backgroundTint="@color/black"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="clickNumber"/>
        <Button
            android:id="@+id/btn8"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="8"
            android:fontFamily="@font/gilroy_med"
            android:textSize="30sp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:onClick="clickNumber"/>
        <Button
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="9"
            android:textSize="30sp"
            android:layout_row="1"
            android:fontFamily="@font/gilroy_med"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:onClick="clickNumber"/>
        <Button
            android:id="@+id/btnMul"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="ร"
            android:textSize="40sp"
            android:fontFamily="@font/gilroy_med"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/black"
            android:textColor="@color/purple_500"
            android:onClick="clickOperation"/>


        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="4"
            android:textSize="30sp"
            android:fontFamily="@font/gilroy_med"
            android:layout_columnWeight="1"
            android:textColor="@color/white"
            android:backgroundTint="@color/black"
            android:layout_row="2"
            android:layout_column="0"
            android:onClick="clickNumber"/>
        <Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="5"
            android:textSize="30sp"
            android:layout_row="2"
            android:fontFamily="@font/gilroy_med"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:onClick="clickNumber"/>
        <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="6"
            android:textSize="30sp"
            android:fontFamily="@font/gilroy_med"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:onClick="clickNumber"/>
        <Button
            android:id="@+id/btnSub"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="-"
            android:textSize="40sp"
            android:layout_row="2"
            android:fontFamily="@font/gilroy_med"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/black"
            android:textColor="@color/purple_500"
            android:onClick="clickOperation"/>


        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="1"
            android:textSize="30sp"
            android:layout_columnWeight="1"
            android:fontFamily="@font/gilroy_med"
            android:textColor="@color/white"
            android:backgroundTint="@color/black"
            android:layout_row="3"
            android:layout_column="0"
            android:onClick="clickNumber"/>
        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="2"
            android:textSize="30sp"
            android:layout_row="3"
            android:fontFamily="@font/gilroy_med"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:onClick="clickNumber"/>
        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="3"
            android:textSize="30sp"
            android:fontFamily="@font/gilroy_med"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:onClick="clickNumber"/>
        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="+"
            android:fontFamily="@font/gilroy_med"
            android:textSize="40sp"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/black"
            android:textColor="@color/purple_500"
            android:onClick="clickOperation"/>
        <Button
            android:id="@+id/btnPercent"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="%"
            android:textSize="30sp"
            android:fontFamily="@font/gilroy_med"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:onClick="clickPercent"/>
        <Button
            android:id="@+id/btn0"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="0"
            android:fontFamily="@font/gilroy_med"
            android:textSize="30sp"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:layout_row="4"
            android:layout_column="1"
            android:onClick="clickNumber"/>
        <Button
            android:id="@+id/btnDot"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="."
            android:fontFamily="@font/gilroy_med"
            android:textSize="30sp"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:onClick="clickNumber"/>
        <Button
            android:id="@+id/btnEqual"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="="
            android:fontFamily="@font/gilroy_med"
            android:textSize="40sp"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/purple_500"
            android:textColor="@color/white"
            android:onClick="clickEquals"/>
    </GridLayout>
</LinearLayout>