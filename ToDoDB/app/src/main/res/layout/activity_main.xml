<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_todo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/softwhite"/>
    </ScrollView>


    <EditText
        android:id="@+id/et_todo"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_weight="0"
        android:textSize="22dp"
        android:inputType="textPersonName"
        android:hint="Write To-Do"
        android:fontFamily="@font/metropolis_med"
        android:textColor="@color/softblack"
        android:background="@color/softwhite"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center|center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_add_todo"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/purple"
            android:fontFamily="@font/metropolis_med"
            android:text="Add Todo"
            android:textColor="@color/softwhite"
            android:textSize="18dp" />

        <Button
            android:id="@+id/button_delete_done"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/purple"
            android:fontFamily="@font/metropolis_med"
            android:text="Delete done"
            android:textColor="@color/softwhite"
            android:textSize="18dp" />

    </LinearLayout>

</LinearLayout>